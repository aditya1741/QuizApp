<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <LinearLayout
        android:id="@+id/progressbar_back_btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="24dp"
        android:layout_gravity="center_vertical"

        >

    <ImageButton
        android:id="@+id/quiz_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_quiz_close_btn"
        android:layout_gravity="center"
        android:padding="5dp"
        android:background="@drawable/quiz_back_btn_background_shape"
        />
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"

            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/quiz_question_progressbar"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="26dp"
                app:trackCornerRadius="200dp"
                app:indicatorColor="#979797"
                app:indicatorDirectionLinear="leftToRight"
                app:trackColor="#FF9F41"
                android:layout_centerVertical="true"
                />

                <TextView
                    android:layout_toRightOf="@+id/quiz_question_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 / 10"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="14sp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/primary_blue"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>





        <androidx.cardview.widget.CardView
            android:id="@+id/question_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            android:layout_gravity="center"
            android:layout_below="@+id/progressbar_back_btn_container"
            android:layout_marginTop="20dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#DCF8FF"
            app:cardCornerRadius="20dp"


            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="HJI"
                android:textColor="@color/black"
                android:textAlignment="center"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/question_container"
        android:layout_marginTop="45dp"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/option_background_nuetral"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp"

            android:elevation="25dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <TextView
                android:id="@+id/option_first_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="HI" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    android:src="@drawable/circle"
                    android:layout_marginEnd="20dp"

                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/option_background_nuetral"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp"

            android:elevation="25dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/option_first_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="HI" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    android:src="@drawable/circle"
                    android:layout_marginEnd="20dp"

                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/option_background_nuetral"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp"

            android:elevation="25dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/option_first_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="HI" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    android:src="@drawable/circle"
                    android:layout_marginEnd="20dp"

                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/option_background_nuetral"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp"

            android:elevation="25dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/option_first_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="HI" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    android:src="@drawable/circle"
                    android:layout_marginEnd="20dp"

                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/option_background_nuetral"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp"

            android:elevation="25dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/option_first_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="HI" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    android:src="@drawable/circle"
                    android:layout_marginEnd="20dp"

                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>












</RelativeLayout>